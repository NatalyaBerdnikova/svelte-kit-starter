{
  "name": "svelte-kit-starter",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "lint-scripts": "prettier --plugin-search-dir . --check . && eslint .",
    "lint-styles": "stylelint '**/*.{scss,sass}'",
    "format": "prettier --plugin-search-dir . --write .",
    "fix-styles": "stylelint '**/*.{scss,sass}' --fix",
    "fix-scripts": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-netlify": "^2.0.6",
    "@sveltejs/kit": "^1.5.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-svelte3": "^4.0.0",
    "eslint-plugin-unicorn": "^46.0.0",
    "husky": "^8.0.3",
    "postcss-sass": "^0.5.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "sass": "^1.59.3",
    "stylelint": "^15.5.0",
    "stylelint-config-idiomatic-order": "^9.0.0",
    "stylelint-config-recommended-scss": "^10.0.0",
    "stylelint-config-sass-guidelines": "^10.0.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^8.0.0",
    "stylelint-order": "^6.0.3",
    "svelte": "^3.54.0",
    "svelte-check": "^3.0.1",
    "svelte-preprocess": "^5.0.3",
    "svelte-preprocess-cssmodules": "^2.2.4",
    "typescript": "^4.0.0",
    "vite": "^4.2.0",
    "vite-imagetools": "^4.0.18"
  },
  "type": "module",
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
